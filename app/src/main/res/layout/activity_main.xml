<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <com.lk.library.CountdownView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="跳过"
        app:center_text_color="@color/colorAccent"
        app:center_text_size="12sp"
        app:duration="5000"
        app:progress_color="@color/colorPrimary"
        app:progress_light_color="@color/colorAccent"/>

    <Button
        android:id="@+id/btn_start_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"/>

</LinearLayout>